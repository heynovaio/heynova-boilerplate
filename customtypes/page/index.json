{
  "format": "page",
  "id": "page",
  "label": "Page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "background_color": {
        "type": "Select",
        "config": {
          "label": "Background Color",
          "placeholder": "",
          "options": ["White", "Light", "Dark"],
          "default_value": "White"
        }
      },
      "category": {
        "type": "Link",
        "config": {
          "label": "Category",
          "select": "document",
          "repeat": false,
          "customtypes": ["resource_category"]
        }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "heading1"
        }
      },
      "tagline": {
        "type": "Text",
        "config": {
          "label": "Tagline",
          "placeholder": ""
        }
      },
      "body": {
        "type": "StructuredText",
        "config": {
          "label": "Body",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "preformatted,paragraph,hyperlink,image,embed,list-item,o-list-item,rtl,strong,em"
        }
      },
      "image": {
        "type": "Image",
        "config": {
          "label": "Image",
          "constraint": {
            "width": null,
            "height": null
          },
          "thumbnails": []
        }
      },
      "button": {
        "type": "Link",
        "config": {
          "label": "Button",
          "placeholder": "",
          "select": null,
          "allowTargetBlank": true,
          "allowText": true,
          "repeat": true
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "carousel": {
              "type": "SharedSlice"
            },
            "simple_text": {
              "type": "SharedSlice"
            },
            "numbered_list": {
              "type": "SharedSlice"
            },
            "testimonial": {
              "type": "SharedSlice"
            },
            "map": {
              "type": "SharedSlice"
            },
            "tile_grid": {
              "type": "SharedSlice"
            },
            "accordion": {
              "type": "SharedSlice"
            },
            "rich_text": {
              "type": "SharedSlice"
            },
            "image_text": {
              "type": "SharedSlice"
            },
            "call_to_action": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
